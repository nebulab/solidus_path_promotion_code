<!-- insert_after '[data-activation-type="multiple_codes"]' -->

<div data-activation-type="url_path">
  <div class="field" id="promotion_path_field">
    <%= f.label :url_path, class: "required" %>
    <%= f.text_field :url_path, class: "fullwidth", required: true %>
  </div>

  <div class="field" id="redeem_from_store_controller_field">
    <%= f.check_box 'redeem_from_store_controller' %>
    <%= t 'path_promotion_code.redeem_from_store_controller' %>
  </div>
</div>
